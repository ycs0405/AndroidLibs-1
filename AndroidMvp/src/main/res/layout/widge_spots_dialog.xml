<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <TextView
      android:id="@+id/spots_dialog_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/title_margin"
      android:text="?attr/DialogTitleText"
      android:textAppearance="?attr/DialogTitleAppearance"/>

  <me.koterwong.widget.dialog.spotsdialog.ProgressLayout
      android:id="@+id/spots_dialog_progress"
      android:layout_width="@dimen/progress_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/progress_margin_top"
      android:layout_marginBottom="@dimen/progress_margin_top"
      android:layout_marginRight="@dimen/progress_margin_right"
      android:layout_marginLeft="@dimen/progress_margin_right"
      />

</LinearLayout>