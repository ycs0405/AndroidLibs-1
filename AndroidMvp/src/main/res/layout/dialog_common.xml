<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:minWidth="260dp"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fffafafa"
    card_view:cardCornerRadius="12.0dip"
    card_view:cardElevation="6.0dip">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:padding="10.0dip">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3.0dip"
        android:text="提   示"
        android:textColor="@color/text_black_grey"
        android:textSize="18.0sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_margin="8.0dip"
        android:background="@color/common_divider_color"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">


      <TextView
          android:id="@+id/tv_dialog_title"
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="确定要删除吗"
          android:textColor="@color/text_black_grey"
          android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="@dimen/dp_12">

      <TextView
          android:id="@+id/tv_cancel"
          android:layout_width="120.0dip"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="20.0dip"
          android:background="@drawable/btn_drak_red_selector"
          android:gravity="center"
          android:paddingBottom="8.0dip"
          android:paddingTop="8.0dip"
          android:text="取消"
          android:textColor="@color/white"
          android:textSize="16.0sp"/>

      <TextView
          android:id="@+id/tv_yes"
          android:layout_width="120.0dip"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="20.0dip"
          android:background="@drawable/btn_drak_red_selector"
          android:gravity="center"
          android:paddingBottom="8.0dip"
          android:paddingTop="8.0dip"
          android:text="确定"
          android:textColor="@color/white"
          android:textSize="16.0sp"/>
    </RelativeLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>